// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?

  uniqueKey uniqueKey[]
}

model roomKey {
  id String @unique

  uniqueKey uniqueKey[]
  message   message[]
}

model uniqueKey {
  id   String @unique
  name String

  roomKey   roomKey @relation(fields: [roomKeyId], references: [id])
  roomKeyId String

  roomName String

  user   User? @relation(fields: [userId], references: [id])
  userId Int?

  message message[]
}

model message {
  id        String   @unique
  message   String
  createdAt DateTime @default(now())

  uniqueKey   uniqueKey @relation(fields: [uniqueKeyId], references: [id])
  uniqueKeyId String

  roomKey   roomKey @relation(fields: [roomKeyId], references: [id])
  roomKeyId String
}
